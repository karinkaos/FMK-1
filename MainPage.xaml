                    <Rectangle HorizontalAlignment="Left" Height="22" Margin="255,10,0,0" Stroke="White" Fill="White" VerticalAlignment="Top" Width="5"/>
                    <Rectangle HorizontalAlignment="Left" Height="22" Margin="369,10,0,0" Stroke="White" Fill="White" VerticalAlignment="Top" Width="5"/>
                    <Slider x:Name="PlayerSlider"
                        Height="40"
                        Width="350"
                        Minimum="1"
                        Maximum="4"
                        TickFrequency="1"
                        Value="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="White"
                        Foreground="White"
                        TickPlacement="Outside"
                        IsThumbToolTipEnabled="False"
                        ValueChanged="PlayerSlider_ValueChanged">
                    </Slider>
                </Grid>
            </Grid>

            <!--EndView-->
            <Grid Name="End" Width="450" Height="600" Background="Blue" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock FontSize="60">
                Ended
                </TextBlock>

                <Button Name="Extra" Grid.Row="1" Width="200" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" 
            Background="Red" Click="Bts_click" Content="Back To Start" FontSize="30"/>
            </Grid>
        </Grid>
    </Grid>
