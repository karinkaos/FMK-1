                <StackPanel x:Name="PiecesPanel" Width="560" Height="180" VerticalAlignment="Top" Orientation="Horizontal" Margin="30">
                    <Grid Width="90" Height="120" Background="Transparent" Margin="25">
                        <Rectangle x:Name="rectangle" Margin="10" RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <CompositeTransform/>
                            </Rectangle.RenderTransform>
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="Assets/Pieces/GreenPiece.png"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                    <Grid Width="90" Height="120" Margin="25" Opacity="0.5">
                        <Rectangle x:Name="rectangle1" Margin="10" RenderTransformOrigin="0.5,0.5" Canvas.ZIndex="1">
                            <Rectangle.RenderTransform>
                                <CompositeTransform/>
                            </Rectangle.RenderTransform>
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="Assets/Pieces/RedPiece.png"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                    <Grid Width="90" Height="120" Background="Transparent" Margin="25">
                        <Rectangle x:Name="rectangle2" Margin="10" RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <CompositeTransform/>
                            </Rectangle.RenderTransform>
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="Assets/Pieces/BluePiece.png"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                    <Grid Width="90" Height="120" Background="Transparent" Margin="25">
                        <Rectangle x:Name="rectangle3" Margin="10" RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <CompositeTransform/>
                            </Rectangle.RenderTransform>
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="Assets/Pieces/YellowPiece.png"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                </StackPanel>

                <!-- Regler -->
                <Grid x:Name="RulesGrid" Height="450" Width="450" Margin="0,100,0,80" Background="LightCoral" Visibility="Collapsed" BorderBrush="DarkGray">
                    <Rectangle>
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/Assets/FMK-RulesImage.png" Stretch="Fill"/>
                        </Rectangle.Fill>
                    </Rectangle>

                </Grid>

                <!-- About -->
                <Grid x:Name="AboutGrid" Visibility="Collapsed">
                    <TextBlock x:Name="AboutText" Text="About" Height="60" Width="450" Margin="0,0,0,350" FontSize="40" Foreground="Black" TextAlignment="Center"/>
                    <TextBlock Height="300" Width="400" Foreground="Black" TextWrapping="Wrap">
                    
                    Creators:<LineBreak/>
                    <LineBreak/>
                            Christoffer Lundberg<LineBreak/>
                            Karin Oskarsson<LineBreak/>
                            Dennis Wiklund<LineBreak/>
                            Mohammed Rezki<LineBreak/>
                    <LineBreak/>
                    October 2024<LineBreak/>
                    <LineBreak/>
                    This project was created for the purpose of a school assignment.

                    </TextBlock>
                    <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="50" Height="75" Width="170" Content="Rules" CornerRadius="8" Background="green" Foreground="Black"
