            <Grid Name="Test" Width="250" Height="250" Background="Gray" AllowDrop="True" DragOver="Test_DragOver" Drop="Test_Drop" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock Name="xd" Text="GOAL!" FontSize="56"/>

            </Grid>

            <MediaElement x:Name="SoundPlayer" AutoPlay="False" Volume="1.0" />

            <!--Test Function för DragNDrop-->



