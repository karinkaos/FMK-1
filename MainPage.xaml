            <!-- Regler och AboutPage -->
            <Button x:Name="RulesBtn" Content="Rules" VerticalAlignment="Top" HorizontalAlignment="Right" Height="50" Width="90" Margin="50" CornerRadius="8" Background="Gray" Click="RulesBtn_Click"/>

